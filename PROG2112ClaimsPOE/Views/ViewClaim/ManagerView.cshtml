@model IEnumerable<PROG2112ClaimsPOE.Models.ClaimModel>

@{
    ViewData["Title"] = "Manager View - Pending Claims";
}

<h2>Pending Claims</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Lecture Name</th>
            <th>Lecture Surname</th>
            <th>Subject Name</th>
            <th>Campus</th>
            <th>Hours</th>
            <th>Hourly Rate</th>
            <th>Payment</th>
            <th>Message</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Id</td>
                <td>@claim.LectureName</td>
                <td>@claim.LectureSurname</td>
                <td>@claim.SubjectName</td>
                <td>@claim.CampusLocation</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.Payment</td>
                <td>@claim.Message</td>
                <td>@claim.Statues</td>

                <td>
                    <a asp-action="Accept"
                       asp-route-id="@claim.Id"
                       class="btn btn-success btn-sm">
                        Accept
                    </a>

                    <a asp-action="Reject"
                       asp-route-id="@claim.Id"
                       class="btn btn-danger btn-sm">
                        Reject
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
